---
import BaseLayout from '../layouts/BaseLayout.astro';
import EmailSignup from '../components/EmailSignup.astro';
import OrganizationSchema from '../components/OrganizationSchema.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout
  title="Home"
  description="Learn how to use Claude Code as a marketer. Practical tutorials, tips, and workflows for non-technical professionals."
  image="/og/default.png"
>
  <OrganizationSchema />
  <section class="hero">
    <div class="terminal-window">
      <div class="terminal-header">
        <span class="terminal-dot red"></span>
        <span class="terminal-dot yellow"></span>
        <span class="terminal-dot green"></span>
      </div>
      <div class="terminal-body">
        <p class="terminal-line"><span class="prompt">$</span> claude --help</p>
        <p class="terminal-output">Welcome, Marketer.</p>
      </div>
    </div>
    <h1>Claude Code<br/><span class="highlight">for Marketers</span></h1>
    <p class="tagline">AI superpowers for marketers. No coding required.</p>
    <div class="hero-signup">
      <EmailSignup tagId="14154457" />
    </div>
  </section>

  <section class="recent-posts" id="recent">
    <h2><span class="prompt">#</span> Recent Posts</h2>
    {posts.length > 0 ? (
      <ul class="post-list">
        {posts.map((post, index) => (
          <li style={`animation-delay: ${index * 0.1}s`}>
            <a href={`/blog/${post.id}`}>
              <div class="post-content">
                <h3>{post.data.title}</h3>
                <p class="description">{post.data.description}</p>
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
              </div>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="empty-state">
        <span class="prompt">$</span> No posts yet. Check back soon!
      </p>
    )}
    <a href="/blog" class="view-all">
      <span>View all posts</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </a>
  </section>

  <EmailSignup tagId="14154457" />
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 2rem 0 0;
    margin-bottom: 2rem;
  }

  .terminal-window {
    max-width: 320px;
    margin: 0 auto 2.5rem;
    background: #1C1917;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    border: 1px solid #292524;
  }

  .terminal-header {
    background: #292524;
    padding: 0.75rem 1rem;
    display: flex;
    gap: 0.5rem;
  }

  .terminal-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-dot.red { background: #ff5f56; }
  .terminal-dot.yellow { background: #ffbd2e; }
  .terminal-dot.green { background: #27ca40; }

  .terminal-body {
    padding: 1.25rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    text-align: left;
    color: #FAFAF9;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
  }

  .terminal-line .prompt {
    color: #DA7756;
    margin-right: 0.5rem;
  }

  .terminal-output {
    color: #a8a29e;
    padding-left: 1rem;
  }

  .hero h1 {
    font-size: 2.75rem;
    margin-bottom: 1rem;
    line-height: 1.15;
  }

  .hero h1 .highlight {
    color: var(--color-accent);
  }

  .tagline {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    max-width: 480px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .hero-signup {
    margin-top: 2rem;
    text-align: left;
  }

  /* Recent Posts */
  .recent-posts {
    padding-top: 1rem;
  }

  .recent-posts h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .recent-posts h2 .prompt {
    color: var(--color-accent);
    margin-right: 0.5rem;
  }

  .post-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-list li {
    animation: fadeInUp 0.4s ease forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .post-list li a {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: inherit;
    transition: all 0.2s ease;
  }

  .post-list li a:hover {
    text-decoration: none;
    border-color: var(--color-accent);
    background: var(--color-bg-secondary);
  }

  .post-number {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-accent);
    flex-shrink: 0;
    padding-top: 0.2rem;
  }

  .post-content {
    flex: 1;
  }

  .post-list h3 {
    font-size: 1.1rem;
    margin-bottom: 0.4rem;
    color: var(--color-text);
  }

  .post-list .description {
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .post-list time {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-secondary);
  }

  .empty-state {
    font-family: var(--font-mono);
    color: var(--color-text-secondary);
    padding: 2rem;
    text-align: center;
  }

  .empty-state .prompt {
    color: var(--color-accent);
  }

  .view-all {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    font-family: var(--font-mono);
    font-weight: 500;
    font-size: 0.9rem;
    transition: gap 0.2s ease;
  }

  .view-all:hover {
    gap: 0.75rem;
  }

  .view-all svg {
    transition: transform 0.2s ease;
  }

  .view-all:hover svg {
    transform: translateX(2px);
  }
</style>
